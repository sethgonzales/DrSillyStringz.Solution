@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Type): @Html.DisplayFor(model => model.Type)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This machine is not licensed to be operated by any engineers</p>
}
else
{
  <h4>This machine is licensed to be operated by:</h4>
  <ul>
  @foreach (EngineerMachine join in Model.JoinEntities)
    {
      <li>@join.Engineer.Name</li>
      @using (Html.BeginForm("DeleteJoin", "Tags"))
      {
        @Html.Hidden("joinId", @join.EngineerMachineId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<div class="navlinks">
  <p>@Html.ActionLink("Back to list", "Index")</p>
  <p>@Html.ActionLink("Add a New Engineer to this Machine", "AddEngineer", new { id = Model.MachineId })</p>
  <p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
  <p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
</div>