@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a New Engineer</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger", @style = "font-weight: 600;" })
</p>

<div class="form">
  @using (Html.BeginForm())
  {
    <div class="form-block">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Details)
      @Html.TextAreaFor(model => model.Details, new { @class = "textbox" })
    </div>
    <div class="form-block">
      <input type="submit" value="Add Engineer" />
    </div>
  }
</div>

<div class="navlinks-back">
  <p>@Html.ActionLink("Show all Engineers", "Index")</p>
</div>